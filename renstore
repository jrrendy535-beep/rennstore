<script>
  function checkoutWA() {
    const nama = encodeURIComponent(document.getElementById('nama').value);
    const alamat = encodeURIComponent(document.getElementById('alamat').value);
    const catatan = encodeURIComponent(document.getElementById('catatan').value);
    if(!nama || !alamat){
      alert('Nama dan Alamat wajib diisi!');
      return;
    }
    const waNumber = "6281299225491"; // Nomor WhatsApp
    const message = `Halo, saya ingin membeli barang.\nNama: ${nama}\nAlamat: ${alamat}\nCatatan: ${catatan}`;
    const url = `https://wa.me/${waNumber}?text=${message}`;
    window.open(url, "_blank");
  }
</script>

